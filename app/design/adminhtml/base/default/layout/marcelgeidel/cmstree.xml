<?xml version="1.0" ?>

<layout version="0.1.0">

    <cmstree>
        <reference name="head">
        	<action method="addItem"><type>js_css</type><name>jquery/plugin-fancytree/skin/ui.fancytree.css</name></action>
        	<action method="addItem"><type>js_css</type><name>jquery/plugin-fancytree/style.css</name></action>
        	
        	<action method="addItem"><type>js</type><name>jquery/jquery-1.12.4.min.js</name></action>
        	<action method="addItem"><type>js</type><name>jquery-ui-1.12.1.min.js</name></action>
        	
        	<action method="addItem"><type>js</type><name>jquery/plugin-fancytree/jquery.fancytree.js</name></action>
        	<action method="addItem"><type>js</type><name>jquery/plugin-fancytree/jquery.fancytree.dnd.js</name></action>
        	<action method="addItem"><type>js</type><name>jquery/plugin-fancytree/jquery.fancytree.edit.js</name></action>
        </reference>
    </cmstree>
    
	<adminhtml_cms_page_index>
	
		<update handle="cmstree"/>
		
		<reference name="left">
			<block type="marcelgeidel_cmstree/adminhtml_cms_page_tree" name="page.tree" template="marcelgeidel/cmstree/cms/page/index/tree.phtml">
				<block type="marcelgeidel_cmstree/adminhtml_cms_page_tree" name="page.tree.script" as="script" template="marcelgeidel/cmstree/cms/page/script.phtml" />
			</block>
		</reference>
		
		<reference name="cms_page">
			<action method="setTemplate"><template>marcelgeidel/cmstree/cms/page/index/content.phtml</template></action>
		</reference>

	</adminhtml_cms_page_index>

	<adminhtml_cms_page_edit>
	
		<update handle="cmstree"/>
		
		<reference name="left">
			<block type="marcelgeidel_cmstree/adminhtml_cms_page_tree" name="page.tree" template="marcelgeidel/cmstree/cms/page/edit/tree.phtml">
				<block type="marcelgeidel_cmstree/adminhtml_cms_page_tree" name="page.tree.script" as="script" template="marcelgeidel/cmstree/cms/page/script.phtml" />
			</block>
		</reference>

	</adminhtml_cms_page_edit>

</layout>
